<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetApp.Views.Stocks"
             xmlns:local="clr-namespace:BudgetApp.Views.Templates"
             Title="Stocks">

    <Grid RowDefinitions="250,Auto,Auto"
          ColumnDefinitions="*,*,*"
          Margin="10">

        <local:InvestInfoView
                x:Name="InvestmentType"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"/>
        <local:CustomButtonComponent
            x:Name="mySharesButton"
            Grid.Row="1"
            Grid.ColumnSpan="3"/>
        <local:CustomButtonComponent
            x:Name="buySharesButton"
            Grid.Row="2"
            Grid.ColumnSpan="3"/>

    </Grid>
</ContentPage>
