<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetApp.Views.Templates.InvestInfoView">

    <Border 
                Margin="10, 0, 10, 0"
                Stroke="#C49B33"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 10"
                Background="#2B0B98"
                HeightRequest="200"
                Padding="15">
            <Grid RowDefinitions="25,*, *, *"
         
                  >
                <Label x:Name="InvestmentType"
                    Grid.Row="0"
                       Grid.ColumnSpan="3"
                    Text="Stocks"
                    TextColor="White"
                    FontSize="20"
                    FontAttributes="Bold"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Balance:"
                    TextColor="White"
                    FontSize="20"
                    FontAttributes="Bold"
                    VerticalOptions="Center" HorizontalOptions="Start"/>
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="€10,0000"
                    TextColor="White"
                    FontSize="32"
                    FontAttributes="Bold"
                    VerticalOptions="Center" HorizontalOptions="Start"/>
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Text="Gain: +5%"
                    TextColor="White"
                    FontSize="20"
                    FontAttributes="Bold"
                    VerticalOptions="Center" HorizontalOptions="Start"/>
             </Grid>
        </Border>
</ContentView>

