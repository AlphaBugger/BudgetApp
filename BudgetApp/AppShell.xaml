<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BudgetApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BudgetApp"
    Shell.FlyoutBehavior="Disabled"
    Title="BudgetApp">

    <TabBar>

        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate local:Views.HomeView}"/>
        </Tab>
        <Tab Title="Budget">
            <ShellContent ContentTemplate="{DataTemplate local:Views.BudgetView}"/>
        </Tab>
        <Tab Title="Loans">
            <ShellContent ContentTemplate="{DataTemplate local:Views.LoanView}"/>
        </Tab>
        <Tab Title="Invest">
            <ShellContent Title="Stocks"
                         ContentTemplate="{DataTemplate local:Views.Stocks}" />
           <ShellContent Title="Crypto"
                         ContentTemplate="{DataTemplate local:Views.Crypto}" />
        </Tab>

        

    </TabBar>
    <ShellContent Title="Edit Account"
              ContentTemplate="{DataTemplate local:Views.EditAccountPage}"/>

</Shell>

