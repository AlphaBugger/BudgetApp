<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="BudgetApp.Themes.LightTheme">
    <!-- Colors -->
    <Color x:Key="PageBackgroundColor">White</Color>
    <Color x:Key="NavigationBarColor">#EEEEEE</Color>
    <Color x:Key="NavigationButtonAccent">#00Ee00</Color>
    <Color x:Key="PrimaryColor">#FFFFFF</Color>
    <Color x:Key="SecondaryColor">#E0E0E0</Color>
    <Color x:Key="PrimaryTextColor">Black</Color>
    <Color x:Key="SecondaryTextColor">#333333</Color>
    <Color x:Key="TertiaryTextColor">#777777</Color>
    <Color x:Key="TransparentColor">Transparent</Color>
    <Color x:Key="ButtonColor">#00ffff</Color>


    <!-- Styles -->
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}"/>
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <Style x:Key="EntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}"/>
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}"/>
    </Style>
</ResourceDictionary>
